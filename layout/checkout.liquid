<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}
    
    {% render 'elevar-head' %}
    
    <!-- TypeKit -->
    <link rel="stylesheet" href="https://use.typekit.net/fro8stq.css">
    
    {% style %}
      {{ settings.type_body_font | font_face: font_display: 'swap' }}
      {{ body_font_bold | font_face: font_display: 'swap' }}
      {{ body_font_italic | font_face: font_display: 'swap' }}
      {{ body_font_bold_italic | font_face: font_display: 'swap' }}
      {{ settings.type_header_font | font_face: font_display: 'swap' }}

      :root {
        --font-body: 'neue-haas-unica', sans-serif;
        --font-body-style: normal;
        --font-body-weight: 400;

        --font-heading: 'vinyl', sans-serif;
        --font-heading-style: normal;
        --font-heading-weight: 400; 
      }
    {% endstyle %}
    
    <style type="text/css">
      .section.section--shipping-method .section__text {
      	color: #cf2828;
      }
    </style>

    <script src="//integrate.thrive.today"></script>
    
    {% if settings.ups_access_point %}
      {{ "manager.js" | asset_url | script_tag }}
      {{ "hubbox.js" | asset_url | script_tag }}
      {{ "hubbox.css" | asset_url | stylesheet_tag }}
    {% endif %}
    
    {{ 'checkout.css' | asset_url | stylesheet_tag }}

    {% include 'shogun-head' %}
    
    <script type="text/javascript">
    (function(c,l,a,r,i,t,y){
        c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
        t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
        y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
    })(window, document, "clarity", "script", "aypz5e5pka");
</script>
  <!-- Hotjar Tracking Code for https://swoveralls.com/pages/happy-place -->
<script>
    (function(h,o,t,j,a,r){
        h.hj=h.hj||function(){(h.hj.q=h.hj.q||[]).push(arguments)};
        h._hjSettings={hjid:3863572,hjsv:6};
        a=o.getElementsByTagName('head')[0];
        r=o.createElement('script');r.async=1;
        r.src=t+h._hjSettings.hjid+j+h._hjSettings.hjsv;
        a.appendChild(r);
    })(window,document,'https://static.hotjar.com/c/hotjar-','.js?sv=');
</script>

    {% comment %}
      PLEASE DO NOT MOVE THIS PURPLE DOT SNIPPET: It could break your integration.
    {% endcomment %}
    {% if settings.use_purpledot %} 
      {% render 'purple-dot' %}
    {% endif %}
    
  </head>
  <body>
    {% render 'elevar-checkout-end' %}
    <script type="text/javascript">
      /* <![CDATA[ */
      var google_conversion_id = 844377706;
      var google_custom_params = window.google_tag_params;
      var google_remarketing_only = true;
      /* ]]> */
    </script>
    <script type="text/javascript" src="//www.googleadservices.com/pagead/conversion.js">
    </script>
    {% comment %}
    Auto expand order summay at checkout for mobile
    Added 7/29/19, disabled 8/5/19, but left here for future
    <script>
      document.addEventListener('DOMContentLoaded', function(event) {
        if(typeof Checkout === 'object'){
          if(typeof Checkout.$ === 'function'){
            Checkout.$('button.order-summary-toggle.order-summary-toggle--show').click()
          }
        }
      })
    </script>
    {% endcomment %}    

    <noscript>
      <div style="display:inline;">
        <img height="1" width="1" style="border-style:none;" alt="" src="//googleads.g.doubleclick.net/pagead/viewthroughconversion/844377706/?guid=ON&amp;script=0"/>
      </div>
    </noscript>

    {{ skip_to_content_link }}

    <div class="banner" data-header>
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </div>

    {{ order_summary_toggle }}

    <div class="content" data-content>
      <div class="wrap">
        <div class="main" role="main">
          <div class="main__header">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </div>
          <div class="main__content">
            {{ content_for_layout }}
          </div>
          <div class="main__footer">
            {{ content_for_footer }}
          </div>
        </div>
        <div class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </div>
      </div>
    </div>
    
    <!-- LOYALTY CODE -->
    <script src="https://cdn-widgetsrepository.yotpo.com/v1/loader/okGnFcgg1iI16hTpTMc3dw" async></script>
    <!--Checkout Module-->
    <div class="yotpo-widget-instance" data-yotpo-instance-id="32724"></div>
    <!--Checkout Module-->

    <!-- Add the widget repo here -->
    <!-- Initial CSS to hide the module -->
    <style type="text/css">
        .yotpo-checkout-hide {
            display: none;
        }
    </style>
    <!-- module inside container -->
    <div class="yotpo-refer-popup-container yotpo-checkout-hide">
        <div class="yotpo-widget-instance" data-yotpo-instance-id="32977"></div>
    </div>
    <!-- JS to handle module initiation -->
    <script type="text/javascript">
        window.location.href.indexOf("thank_you") !== -1
            ? document
                  .querySelector(".yotpo-checkout-hide")
                  .classList.remove("yotpo-checkout-hide")
            : "";
    </script>
    <!-- LOYALTY CODE -->

    {{ tracking_code }}
    
    <script src="https://cdn.attn.tv/47brand/dtag.js"></script>
  </body>
</html>
