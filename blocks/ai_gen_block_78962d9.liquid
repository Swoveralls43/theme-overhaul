<script>
  (function() {
    class AdvertorialLanding{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupSmoothScroll();
        this.setupVariantSelectors();
        this.setupAddToCartButtons();
      }

      setupSmoothScroll() {
        const heroSection = this.querySelector('[data-hero-section]');
        const scrollTrigger = this.querySelector('[data-scroll-trigger]');
        const productsSection = this.querySelector('[data-products-section]');

        if (heroSection && productsSection) {
          const scrollToProducts = () => {
            productsSection.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          };

          heroSection.addEventListener('click', (e) => {
            if (!e.target.closest('[data-scroll-trigger]')) {
              scrollToProducts();
            }
          });

          if (scrollTrigger) {
            scrollTrigger.addEventListener('click', scrollToProducts);
          }
        }
      }

      setupVariantSelectors() {
        const selects = this.querySelectorAll('[data-product-select]');
        
        selects.forEach((select) => {
          select.addEventListener('change', (e) => {
            const variantId = e.target.value;
            const productContainer = e.target.closest('.ai-advertorial-product-{{ ai_gen_id }}');
            const addToCartButton = productContainer.querySelector('.ai-advertorial-add-to-cart-{{ ai_gen_id }}');
            const selectedOption = e.target.options[e.target.selectedIndex];
            const isAvailable = !selectedOption.disabled;

            addToCartButton.setAttribute('data-variant-id', variantId);
            
            if (isAvailable) {
              addToCartButton.disabled = false;
              addToCartButton.textContent = '{{ block.settings.add_to_cart_text }}';
            } else {
              addToCartButton.disabled = true;
              addToCartButton.textContent = 'Sold Out';
            }
          });
        });
      }

      setupAddToCartButtons() {
        const buttons = this.querySelectorAll('.ai-advertorial-add-to-cart-{{ ai_gen_id }}');
        
        buttons.forEach((button) => {
          button.addEventListener('click', async (e) => {
            const variantId = e.target.getAttribute('data-variant-id');
            const originalText = e.target.textContent;
            
            e.target.disabled = true;
            e.target.textContent = 'Adding...';

            try {
              const response = await fetch('/cart/add.js', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                  items: [{
                    id: variantId,
                    quantity: 1
                  }]
                })
              });

