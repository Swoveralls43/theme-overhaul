    {% endif %}
    {% if block.settings.title != blank %}
      <h2 class="ai-promo-bundle__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
    {% endif %}
    {% if block.settings.subtitle != blank %}
      <div class="ai-promo-bundle__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
    {% endif %}
  </div>

