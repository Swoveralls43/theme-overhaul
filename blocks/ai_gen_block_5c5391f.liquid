    <div class="ai-promo-bundle__product-section-{{ ai_gen_id }}">
      <div class="ai-promo-bundle__product-label-{{ ai_gen_id }}">Step 1: Choose Swoveralls</div>
      <h3 class="ai-promo-bundle__product-title-{{ ai_gen_id }}">{{ block.settings.collection_1_title }}</h3>
      
      {% if block.settings.collection_1 != blank %}
        <div class="ai-promo-bundle__product-grid-{{ ai_gen_id }}" data-product-type="rolls">
          {% for product in block.settings.collection_1.products limit: block.settings.products_limit %}
            <div 
              class="ai-promo-bundle__product-item-{{ ai_gen_id }}"
              data-product-id="{{ product.id }}"
              data-product-title="{{ product.title | escape }}"
              data-product-handle="{{ product.handle }}"
            >
              {% if product.featured_image %}
                <img 
                  src="{{ product.featured_image | image_url: width: 300 }}" 
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-promo-bundle__product-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="300"
                  height="300"
                >
              {% endif %}
              <div class="ai-promo-bundle__product-name-{{ ai_gen_id }}">{{ product.title }}</div>
              <div class="ai-promo-bundle__product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
              
              <select class="ai-promo-bundle__size-select-{{ ai_gen_id }}" data-size-select aria-label="Select size for {{ product.title }}">
                <option value="">Select size</option>
                {% for variant in product.variants %}
                  {% if variant.available %}
                    <option 
                      value="{{ variant.id }}" 
                      data-price="{{ variant.price }}"
                    >
                      {{ variant.title }}
                    </option>
                  {% endif %}
                {% endfor %}
