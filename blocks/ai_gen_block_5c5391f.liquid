<script>
  (function() {
    class PromoBundle{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.selectedRolls = null;
        this.selectedShorts = null;
        this.discountPercent = {{ block.settings.discount_percentage }};
      }

      connectedCallback() {
        this.productItems = this.querySelectorAll('.ai-promo-bundle__product-item-{{ ai_gen_id }}');
        this.addButton = this.querySelector('[data-add-bundle]');
        this.totalPriceEl = this.querySelector('[data-total-price]');
        this.savingsEl = this.querySelector('[data-savings]');
        this.savingsAmountEl = this.querySelector('[data-savings-amount]');
        this.messageEl = this.querySelector('[data-message]');

        this.setupEventListeners();
      }

      setupEventListeners() {
        this.productItems.forEach(item => {
          const sizeSelect = item.querySelector('[data-size-select]');
          
          item.addEventListener('click', (e) => {
            if (e.target !== sizeSelect) {
              this.handleProductSelect(item);
            }
          });

          sizeSelect.addEventListener('change', (e) => {
            this.handleProductSelect(item);
            this.handleSizeChange(item, e.target);
          });
        });

        this.addButton.addEventListener('click', () => this.addToCart());
      }

      handleProductSelect(item) {
        const productType = item.closest('[data-product-type]').dataset.productType;
        const siblings = item.closest('[data-product-type]').querySelectorAll('.ai-promo-bundle__product-item-{{ ai_gen_id }}');
        
        siblings.forEach(sibling => sibling.classList.remove('selected'));
        item.classList.add('selected');

        const sizeSelect = item.querySelector('[data-size-select]');
        const selectedOption = sizeSelect.options[sizeSelect.selectedIndex];
        
        if (sizeSelect.value) {
          const productData = {
            id: item.dataset.productId,
            variantId: sizeSelect.value,
            title: item.dataset.productTitle,
            size: selectedOption.text,
            price: parseFloat(selectedOption.dataset.price),
            handle: item.dataset.productHandle
          };

          if (productType === 'rolls') {
            this.selectedRolls = productData;
          } else {
            this.selectedShorts = productData;
          }

          this.updatePricing();
        } else {
          if (productType === 'rolls') {
            this.selectedRolls = null;
          } else {
            this.selectedShorts = null;
          }
          this.updatePricing();
        }
      }

      handleSizeChange(item, select) {
        if (select.value) {
          this.handleProductSelect(item);
        }
      }

      updatePricing() {
        if (this.selectedRolls && this.selectedShorts) {
          const rollsPrice = this.selectedRolls.price;
          const shortsPrice = this.selectedShorts.price;
          const shortsDiscount = shortsPrice * (this.discountPercent / 100);
          const discountedShortsPrice = shortsPrice - shortsDiscount;
          const total = rollsPrice + discountedShortsPrice;
          const savings = shortsDiscount;

          this.totalPriceEl.textContent = this.formatMoney(total);
          this.savingsAmountEl.textContent = this.formatMoney(savings);
          this.savingsEl.style.display = 'block';
          this.addButton.disabled = false;
          this.messageEl.textContent = '';
        } else {
          this.totalPriceEl.textContent = 'Select both items';
          this.savingsEl.style.display = 'none';
          this.addButton.disabled = true;
          
          if (this.selectedRolls && !this.selectedShorts) {
            this.messageEl.textContent = 'Now select your Swovie Shorts and size';
          } else if (!this.selectedRolls && this.selectedShorts) {
            this.messageEl.textContent = 'Now select your Swoveralls and size';
          } else if (this.selectedRolls === null && this.selectedShorts === null) {
            this.messageEl.textContent = '';
          }
        }
      }

      formatMoney(cents) {
        return '$' + (cents / 100).toFixed(2);
      }

      async addToCart() {
        if (!this.selectedRolls || !this.selectedShorts) return;

        this.addButton.disabled = true;
        this.addButton.textContent = 'Adding...';

        try {
          const items = [
            {
              id: this.selectedRolls.variantId,
              quantity: 1
            },
            {
              id: this.selectedShorts.variantId,
              quantity: 1,
              properties: {
                '_discount': this.discountPercent + '% off'
              }
            }
          ];

          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ items })
          });

          if (response.ok) {
            this.messageEl.textContent = 'âœ“ Bundle added to cart!';
            this.messageEl.style.color = '{{ block.settings.badge_color }}';
            
            setTimeout(() => {
              window.location.href = '/cart';
            }, 500);
          } else {
            throw new Error('Failed to add to cart');
          }
        } catch (error) {
          this.messageEl.textContent = 'Error adding to cart. Please try again.';
          this.messageEl.style.color = '#D82C0D';
          this.addButton.disabled = false;
          this.addButton.textContent = '{{ block.settings.button_text }}';
        }
      }
    }

    customElements.define('promo-bundle-{{ ai_gen_id }}', PromoBundle{{ ai_gen_id }});
  })();
</script>

