    }

    .ai-review-accordion__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
      margin-bottom: 8px;
    }

    .ai-review-accordion__subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size }}px * 0.85);
    }

    .ai-review-accordion__button-{{ ai_gen_id }} {
      padding: {{ block.settings.accordion_header_padding | times: 0.75 }}px;
    }

    .ai-review-accordion__button-content-{{ ai_gen_id }} {
