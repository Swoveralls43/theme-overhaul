    }

    .ai-review-accordion__button-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.accordion_title_size }}px * 0.9);
    }

    .ai-review-accordion__button-star-{{ ai_gen_id }} {
      width: 12px;
