    }

    .ai-review-accordion__panel-content-{{ ai_gen_id }} {
      padding: {{ block.settings.accordion_content_padding | times: 0.75 }}px;
      padding-top: 0;
    }

    .ai-review-accordion__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-review-accordion__image-wrapper-{{ ai_gen_id }} {
