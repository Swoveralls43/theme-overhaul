{% doc %}
  @prompt
    I'm going to create a hero section with an image and the ability to put an overlay on the image. Then there can be hero text on the image, hero subheader on the image, and there can be a CTA button, but you can also remove the CTA button. Below the image, there is a section where I can drop in a Klaviyo embed code for a form. 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-container-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    max-width: 100%;
  }

  .ai-hero-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-hero-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    width: 100%;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
    pointer-events: none;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: {{ block.settings.text_alignment }};
    width: 90%;
    max-width: {{ block.settings.content_max_width }}px;
    z-index: 2;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    line-height: 1.2;
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
    line-height: 1.4;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
  }

  .ai-hero-form-section-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.form_padding_top }}px {{ block.settings.form_padding_horizontal }}px {{ block.settings.form_padding_bottom }}px;
    background-color: {{ block.settings.form_bg_color }};
  }

  .ai-hero-form-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.form_max_width }}px;
    margin: 0 auto;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size }}px * 0.8);
    }

    .ai-hero-button-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.button_font_size }}px * 0.9);
    }
  }
{% endstyle %}

<hero-section-{{ ai_gen_id }} class="ai-hero-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.hero_image %}
      <img
        src="{{ block.settings.hero_image | image_url: width: 2000 }}"
        alt="{{ block.settings.hero_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.hero_image.width }}"
        height="{{ block.settings.hero_image.height }}"
        class="ai-hero-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-hero-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}

    {% if block.settings.enable_overlay %}
      <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    <div class="ai-hero-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <div class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
      {% endif %}

      {% if block.settings.show_button and block.settings.button_text != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-hero-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>

  {% if block.settings.klaviyo_embed_code != blank %}
    <div class="ai-hero-form-section-{{ ai_gen_id }}">
      <div class="ai-hero-form-wrapper-{{ ai_gen_id }}">
        {{ block.settings.klaviyo_embed_code }}
      </div>
    </div>
  {% endif %}
</hero-section-{{ ai_gen_id }}>

<script>
  (function() {
    class HeroSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('hero-section-{{ ai_gen_id }}', HeroSection{{ ai_gen_id }});
  })();
</script>

