    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
  }

  .ai-design-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .ai-design-card__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    background: #f4f4f4;
    overflow: hidden;
  }

  .ai-design-card__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-design-card__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f4f4f4;
  }

  .ai-design-card__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-design-card__content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-design-card__name-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px;
  }

  .ai-design-card__designer-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    margin: 0 0 16px;
  }

  .ai-design-card__vote-section-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
  }

  .ai-design-card__vote-count-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    font-weight: 600;
  }

  .ai-design-card__vote-btn-{{ ai_gen_id }} {
    padding: 10px 20px;
    background: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s ease;
    white-space: nowrap;
  }

  .ai-design-card__vote-btn-{{ ai_gen_id }}:hover {
    background: {{ block.settings.button_hover_color }};
  }

  .ai-design-card__vote-btn-{{ ai_gen_id }}:disabled {
    background: #ccc;
    cursor: not-allowed;
  }

  .ai-design-card__voted-{{ ai_gen_id }} {
    background: {{ block.settings.voted_color }};
    color: #fff;
  }

  .ai-design-card__voted-{{ ai_gen_id }}:hover {
    background: {{ block.settings.voted_color }};
  }

  .ai-modal-{{ ai_gen_id }} {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 9999;
    align-items: center;
    justify-content: center;
