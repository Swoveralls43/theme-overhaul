  .ai-modal__title-{{ ai_gen_id }} {
    font-size: 24px;
    font-weight: 700;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
    padding-right: 30px;
  }

  .ai-modal__subtitle-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    margin: 0 0 24px;
  }

  .ai-modal__form-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-modal__input-{{ ai_gen_id }} {
    padding: 12px 16px;
    border: 2px solid #e0e0e0;
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: 16px;
    transition: border-color 0.3s ease;
  }

  .ai-modal__input-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.button_color }};
  }

  .ai-modal__submit-{{ ai_gen_id }} {
    padding: 14px 24px;
    background: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .ai-modal__submit-{{ ai_gen_id }}:hover {
    background: {{ block.settings.button_hover_color }};
  }

  .ai-modal__error-{{ ai_gen_id }} {
    padding: 12px;
    border-radius: 6px;
    font-size: 14px;
    text-align: center;
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }

  .ai-thank-you-{{ ai_gen_id }} {
    display: none;
    text-align: center;
  }

  .ai-thank-you-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-thank-you__icon-{{ ai_gen_id }} {
    width: 60px;
    height: 60px;
    margin: 0 auto 20px;
    background: {{ block.settings.voted_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 32px;
  }

  .ai-thank-you__title-{{ ai_gen_id }} {
    font-size: 28px;
    font-weight: 700;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
  }

  .ai-thank-you__message-{{ ai_gen_id }} {
    font-size: 16px;
    color: {{ block.settings.text_color }};
    opacity: 0.85;
    margin: 0 0 24px;
    line-height: 1.5;
  }

  .ai-thank-you__cta-{{ ai_gen_id }} {
