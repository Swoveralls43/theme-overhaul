<design-contest-{{ ai_gen_id }} class="ai-design-contest-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-design-contest__header-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h2 class="ai-design-contest__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
    {% endif %}
    {% if block.settings.description != blank %}
      <div class="ai-design-contest__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}
  </div>

  <div class="ai-design-contest__grid-{{ ai_gen_id }}">
    {% liquid
      assign has_designs = false
      for i in (1..12)
        assign image_key = 'design_' | append: i | append: '_image'
        assign name_key = 'design_' | append: i | append: '_name'
        assign designer_key = 'design_' | append: i | append: '_designer'
        
        assign design_image = block.settings[image_key]
        assign design_name = block.settings[name_key]
        assign design_designer = block.settings[designer_key]
        
        if design_image != blank or design_name != blank
          assign has_designs = true
        endif
      endfor
    %}

    {% if has_designs %}
      {% for i in (1..12) %}
        {% liquid
          assign image_key = 'design_' | append: i | append: '_image'
          assign name_key = 'design_' | append: i | append: '_name'
          assign designer_key = 'design_' | append: i | append: '_designer'
          
          assign design_image = block.settings[image_key]
          assign design_name = block.settings[name_key]
          assign design_designer = block.settings[designer_key]
        %}

        {% if design_image != blank or design_name != blank %}
          <div class="ai-design-card-{{ ai_gen_id }}" data-design-id="{{ i }}">
            <div class="ai-design-card__image-wrapper-{{ ai_gen_id }}">
              {% if design_image %}
                <img
                  src="{{ design_image | image_url: width: 600 }}"
                  alt="{{ design_name | escape }}"
                  class="ai-design-card__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {% else %}
                <div class="ai-design-card__placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-design-card__content-{{ ai_gen_id }}">
              {% if design_name != blank %}
                <h3 class="ai-design-card__name-{{ ai_gen_id }}">{{ design_name }}</h3>
              {% endif %}
              {% if design_designer != blank %}
                <p class="ai-design-card__designer-{{ ai_gen_id }}">by {{ design_designer }}</p>
              {% endif %}
              <div class="ai-design-card__vote-section-{{ ai_gen_id }}">
                <span class="ai-design-card__vote-count-{{ ai_gen_id }}" data-vote-count="{{ i }}">0 votes</span>
                <button
                  type="button"
                  class="ai-design-card__vote-btn-{{ ai_gen_id }}"
                  data-vote-button="{{ i }}"
                  data-design-name="{{ design_name | escape }}"
                  aria-label="Vote for {{ design_name | escape }}"
                >
                  {{ block.settings.vote_button_text }}
                </button>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    {% else %}
      <div class="ai-design-contest__empty-{{ ai_gen_id }}" style="grid-column: 1 / -1;">
        <p>Add your first design to get started with the contest!</p>
      </div>
    {% endif %}
  </div>

  <div class="ai-modal-{{ ai_gen_id }}" data-modal="{{ ai_gen_id }}">
    <div class="ai-modal__content-{{ ai_gen_id }}">
      <button type="button" class="ai-modal__close-{{ ai_gen_id }}" data-modal-close="{{ ai_gen_id }}" aria-label="Close">×</button>
      
      <div class="ai-modal__form-wrapper-{{ ai_gen_id }}" data-form-wrapper="{{ ai_gen_id }}">
        <h3 class="ai-modal__title-{{ ai_gen_id }}">{{ block.settings.modal_title }}</h3>
        <p class="ai-modal__subtitle-{{ ai_gen_id }}">{{ block.settings.modal_subtitle }}</p>
        
        {% assign form_id = 'design-contest-form-' | append: ai_gen_id %}
        {%- form 'contact', id: form_id -%}
          <input type="hidden" name="contact[contest_name]" value="{{ block.settings.title | escape }}">
          <input type="hidden" name="contact[design_id]" data-design-id-input="{{ ai_gen_id }}">
          <input type="hidden" name="contact[design_name]" data-design-name-input="{{ ai_gen_id }}">
          <input type="hidden" name="contact[tags]" value="design-contest-vote">
          
          {% if form.errors %}
            <div class="ai-modal__error-{{ ai_gen_id }}">
              {% for field in form.errors %}
                {{ form.errors.messages[field] }}
              {% endfor %}
            </div>
          {% endif %}

          <input
            type="email"
            name="contact[email]"
            class="ai-modal__input-{{ ai_gen_id }}"
            placeholder="{{ block.settings.email_placeholder }}"
            required
            autocomplete="email"
            aria-label="Email address"
          >

          <input
            type="text"
            name="contact[name]"
            class="ai-modal__input-{{ ai_gen_id }}"
            placeholder="{{ block.settings.name_placeholder }}"
            autocomplete="name"
            aria-label="Your name"
          >

          <button type="submit" class="ai-modal__submit-{{ ai_gen_id }}">
            {{ block.settings.submit_button_text }}
          </button>
        {%- endform -%}
      </div>

      <div class="ai-thank-you-{{ ai_gen_id }}" data-thank-you="{{ ai_gen_id }}">
        <div class="ai-thank-you__icon-{{ ai_gen_id }}">✓</div>
        <h3 class="ai-thank-you__title-{{ ai_gen_id }}">{{ block.settings.thank_you_title }}</h3>
        <div class="ai-thank-you__message-{{ ai_gen_id }}">{{ block.settings.thank_you_message }}</div>
        {% if block.settings.thank_you_cta_text != blank and block.settings.thank_you_cta_url != blank %}
          <a href="{{ block.settings.thank_you_cta_url }}" class="ai-thank-you__cta-{{ ai_gen_id }}">
            {{ block.settings.thank_you_cta_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</design-contest-{{ ai_gen_id }}>

<script>
  (function() {
    class DesignContest{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.storageKey = 'design_contest_votes_{{ ai_gen_id }}';
        this.userVoteKey = 'design_contest_user_vote_{{ ai_gen_id }}';
      }

      connectedCallback() {
        this.modal = this.querySelector('[data-modal="{{ ai_gen_id }}"]');
        this.modalClose = this.querySelector('[data-modal-close="{{ ai_gen_id }}"]');
        this.voteButtons = this.querySelectorAll('[data-vote-button]');
        this.designIdInput = this.querySelector('[data-design-id-input="{{ ai_gen_id }}"]');
        this.designNameInput = this.querySelector('[data-design-name-input="{{ ai_gen_id }}"]');
        this.form = this.querySelector('form');
        this.formWrapper = this.querySelector('[data-form-wrapper="{{ ai_gen_id }}"]');
        this.thankYou = this.querySelector('[data-thank-you="{{ ai_gen_id }}"]');
        
        this.loadVotes();
        this.checkUserVote();
        this.setupEventListeners();
      }

      setupEventListeners() {
        const self = this;
        
        this.voteButtons.forEach(function(button) {
          button.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            const designId = this.getAttribute('data-vote-button');
            const designName = this.getAttribute('data-design-name') || 'Design ' + designId;
            
            self.openModal(designId, designName);
          });
        });

        if (this.modalClose) {
          this.modalClose.addEventListener('click', function(e) {
            e.preventDefault();
            self.closeModal();
          });
        }
        
        if (this.modal) {
          this.modal.addEventListener('click', function(e) {
            if (e.target === self.modal) {
              self.closeModal();
            }
          });
        }

        if (this.form) {
          this.form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(self.form);
            const designId = self.designIdInput.value;
            
            fetch(self.form.action, {
              method: 'POST',
              body: formData,
              headers: {
                'Accept': 'application/json'
              }
            }).then(function(response) {
              if (response.ok) {
                if (designId) {
                  self.recordVote(designId);
                }
                self.showThankYou();
              }
            }).catch(function(error) {
              console.error('Error:', error);
            });
          });
        }

        document.addEventListener('keydown', function(e) {
          if (e.key === 'Escape' && self.modal && self.modal.classList.contains('active')) {
            self.closeModal();
          }
        });
      }

      openModal(designId, designName) {
        const userVote = localStorage.getItem(this.userVoteKey);
        if (userVote) {
          alert('You have already voted in this contest!');
          return;
        }

        if (this.designIdInput) {
          this.designIdInput.value = designId;
        }
        if (this.designNameInput) {
          this.designNameInput.value = designName;
        }
        
        if (this.formWrapper) {
          this.formWrapper.style.display = 'block';
        }
        if (this.thankYou) {
          this.thankYou.classList.remove('active');
        }
        
        if (this.modal) {
          this.modal.classList.add('active');
          document.body.style.overflow = 'hidden';
        }
      }

      closeModal() {
        if (this.modal) {
          this.modal.classList.remove('active');
          document.body.style.overflow = '';
        }
      }

      showThankYou() {
        if (this.formWrapper) {
          this.formWrapper.style.display = 'none';
        }
        if (this.thankYou) {
          this.thankYou.classList.add('active');
        }
      }

      loadVotes() {
        const votes = this.getVotes();
        const self = this;
        Object.keys(votes).forEach(function(designId) {
          self.updateVoteDisplay(designId, votes[designId]);
        });
      }

      getVotes() {
        const stored = localStorage.getItem(this.storageKey);
        return stored ? JSON.parse(stored) : {};
      }

      saveVotes(votes) {
        localStorage.setItem(this.storageKey, JSON.stringify(votes));
      }

      recordVote(designId) {
        const votes = this.getVotes();
        votes[designId] = (votes[designId] || 0) + 1;
        this.saveVotes(votes);
        this.updateVoteDisplay(designId, votes[designId]);
        localStorage.setItem(this.userVoteKey, designId);
        this.markAsVoted(designId);
      }

      updateVoteDisplay(designId, count) {
        const voteCountEl = this.querySelector('[data-vote-count="' + designId + '"]');
        if (voteCountEl) {
          voteCountEl.textContent = count + (count === 1 ? ' vote' : ' votes');
        }
      }

      checkUserVote() {
        const userVote = localStorage.getItem(this.userVoteKey);
        if (userVote) {
          this.markAsVoted(userVote);
        }
      }

      markAsVoted(designId) {
        const self = this;
        this.voteButtons.forEach(function(button) {
          const btnDesignId = button.getAttribute('data-vote-button');
          if (btnDesignId === designId) {
            button.classList.add('ai-design-card__voted-{{ ai_gen_id }}');
            button.textContent = '{{ block.settings.voted_button_text }}';
            button.disabled = true;
          } else {
            button.disabled = true;
            button.style.opacity = '0.5';
          }
        });
      }
    }

    customElements.define('design-contest-{{ ai_gen_id }}', DesignContest{{ ai_gen_id }});
  })();
</script>

