  .ai-modal__close-{{ ai_gen_id }} {
    position: absolute;
    top: 16px;
    right: 16px;
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
    padding: 4px;
    line-height: 1;
    z-index: 1;
  }

  .ai-modal__close-{{ ai_gen_id }}:hover {
