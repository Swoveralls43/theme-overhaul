    padding: 40px 20px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-design-contest__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-design-contest__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px;
    font-weight: 700;
  }

  .ai-design-contest__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    opacity: 0.85;
  }

  .ai-design-contest__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: 40px;
  }

