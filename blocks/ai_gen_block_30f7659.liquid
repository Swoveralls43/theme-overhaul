  }

  .ai-modal__content-{{ ai_gen_id }} {
    background: {{ block.settings.modal_background }};
    border-radius: {{ block.settings.modal_border_radius }}px;
    padding: {{ block.settings.modal_padding }}px;
    max-width: 500px;
    width: 100%;
