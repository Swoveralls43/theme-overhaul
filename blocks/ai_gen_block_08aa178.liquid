  {% if block.settings.show_cta %}
    <div class="ai-contest-info__cta-{{ ai_gen_id }}" data-cta-section>
      {% if block.settings.cta_title != blank %}
        <h2 class="ai-contest-info__cta-title-{{ ai_gen_id }}">{{ block.settings.cta_title }}</h2>
      {% endif %}
      {% if block.settings.cta_text != blank %}
        <p class="ai-contest-info__cta-text-{{ ai_gen_id }}">{{ block.settings.cta_text }}</p>
      {% endif %}
      {% if block.settings.cta_button_text != blank and block.settings.cta_button_link != blank %}
        <a href="{{ block.settings.cta_button_link }}" class="ai-contest-info__cta-button-{{ ai_gen_id }}">
          {{ block.settings.cta_button_text }}
        </a>
      {% endif %}
    </div>
  {% endif %}
</design-contest-info-{{ ai_gen_id }}>

<script>
  (function() {
    class DesignContestInfo{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.accordionItems = this.querySelectorAll('[data-accordion-item]');
        this.scrollButtons = this.querySelectorAll('[data-scroll-to-cta]');
        this.ctaSection = this.querySelector('[data-cta-section]');
        
        this.setupAccordion();
        this.setupScrollButtons();
      }

      setupAccordion() {
        this.accordionItems.forEach((item) => {
          const trigger = item.querySelector('[data-accordion-trigger]');
          const content = item.querySelector('[data-accordion-content]');
          
          trigger.addEventListener('click', () => {
            const isActive = item.classList.contains('active');
            
            this.accordionItems.forEach((otherItem) => {
              if (otherItem !== item) {
                otherItem.classList.remove('active');
                const otherContent = otherItem.querySelector('[data-accordion-content]');
                const otherTrigger = otherItem.querySelector('[data-accordion-trigger]');
                otherContent.style.maxHeight = null;
                otherTrigger.setAttribute('aria-expanded', 'false');
              }
            });
            
            if (isActive) {
              item.classList.remove('active');
              content.style.maxHeight = null;
              trigger.setAttribute('aria-expanded', 'false');
            } else {
              item.classList.add('active');
              content.style.maxHeight = content.scrollHeight + 'px';
              trigger.setAttribute('aria-expanded', 'true');
            }
          });
        });
      }

      setupScrollButtons() {
        if (!this.ctaSection) return;

        this.scrollButtons.forEach((button) => {
          button.addEventListener('click', () => {
            this.ctaSection.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          });
        });
      }
    }

    customElements.define('design-contest-info-{{ ai_gen_id }}', DesignContestInfo{{ ai_gen_id }});
  })();
</script>

