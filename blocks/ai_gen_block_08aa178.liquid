<design-contest-info-{{ ai_gen_id }} class="ai-contest-info-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-contest-info__header-{{ ai_gen_id }}">
    <div class="ai-contest-info__header-image-{{ ai_gen_id }}">
      {% if block.settings.header_image %}
        <img
          src="{{ block.settings.header_image | image_url: width: 800 }}"
          alt="{{ block.settings.header_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.header_image.width }}"
          height="{{ block.settings.header_image.height }}"
        >
      {% else %}
        <div class="ai-contest-info__header-image-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>
    
    <div class="ai-contest-info__header-content-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h1 class="ai-contest-info__title-{{ ai_gen_id }}">{{ block.settings.title }}</h1>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <p class="ai-contest-info__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
      {% endif %}
      {% if block.settings.show_header_button %}
        <div class="ai-contest-info__button-wrapper-{{ ai_gen_id }}">
          <button 
            class="ai-contest-info__scroll-button-{{ ai_gen_id }}"
            data-scroll-to-cta
          >
            {{ block.settings.header_button_text }}
          </button>
        </div>
      {% endif %}
    </div>
  </div>

  {% if block.settings.intro_text != blank %}
    <div class="ai-contest-info__intro-{{ ai_gen_id }}">
      <div class="ai-contest-info__intro-content-{{ ai_gen_id }}">
        {{ block.settings.intro_text }}
      </div>
      {% if block.settings.show_intro_button %}
        <div class="ai-contest-info__button-wrapper-{{ ai_gen_id }}">
          <button 
            class="ai-contest-info__scroll-button-{{ ai_gen_id }}"
            data-scroll-to-cta
          >
            {{ block.settings.intro_button_text }}
          </button>
        </div>
      {% endif %}
    </div>
  {% endif %}

  {% if block.settings.show_timeline %}
    <div class="ai-contest-info__timeline-{{ ai_gen_id }}">
      <h2 class="ai-contest-info__section-title-{{ ai_gen_id }}">{{ block.settings.timeline_title }}</h2>
      <div class="ai-contest-info__timeline-items-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% liquid
            assign date_key = 'timeline_' | append: i | append: '_date'
            assign title_key = 'timeline_' | append: i | append: '_title'
            assign desc_key = 'timeline_' | append: i | append: '_desc'
            
            assign date = block.settings[date_key]
            assign title = block.settings[title_key]
            assign desc = block.settings[desc_key]
          %}
          
          {% if title != blank %}
            <div class="ai-contest-info__timeline-item-{{ ai_gen_id }}">
              <div class="ai-contest-info__timeline-icon-{{ ai_gen_id }}">{{ i }}</div>
              <div class="ai-contest-info__timeline-content-{{ ai_gen_id }}">
                {% if date != blank %}
                  <div class="ai-contest-info__timeline-date-{{ ai_gen_id }}">{{ date }}</div>
                {% endif %}
                <h3 class="ai-contest-info__timeline-title-{{ ai_gen_id }}">{{ title }}</h3>
                {% if desc != blank %}
                  <p class="ai-contest-info__timeline-desc-{{ ai_gen_id }}">{{ desc }}</p>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      {% if block.settings.show_timeline_button %}
        <div class="ai-contest-info__timeline-footer-{{ ai_gen_id }}">
          <button 
            class="ai-contest-info__scroll-button-{{ ai_gen_id }}"
            data-scroll-to-cta
          >
            {{ block.settings.timeline_button_text }}
          </button>
        </div>
      {% endif %}
    </div>
  {% endif %}

  <div class="ai-contest-info__faq-{{ ai_gen_id }}">
    <h2 class="ai-contest-info__section-title-{{ ai_gen_id }}">{{ block.settings.faq_title }}</h2>
    <div class="ai-contest-info__accordion-{{ ai_gen_id }}">
      {% for i in (1..10) %}
        {% liquid
          assign question_key = 'faq_' | append: i | append: '_question'
          assign answer_key = 'faq_' | append: i | append: '_answer'
          
          assign question = block.settings[question_key]
          assign answer = block.settings[answer_key]
        %}
        
        {% if question != blank %}
          <div class="ai-contest-info__accordion-item-{{ ai_gen_id }}" data-accordion-item>
            <button 
              class="ai-contest-info__accordion-button-{{ ai_gen_id }}"
              aria-expanded="false"
              data-accordion-trigger
            >
              <h3 class="ai-contest-info__accordion-question-{{ ai_gen_id }}">{{ question }}</h3>
              <svg class="ai-contest-info__accordion-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
