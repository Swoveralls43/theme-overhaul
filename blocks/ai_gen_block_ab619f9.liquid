{% doc %}
  @prompt
    Create a header layout modification that positions the Swoveralls logo on the left side and centers the navigation menu in the middle of the header. The code should use CSS flexbox or grid to achieve this layout while maintaining responsive behavior on mobile devices.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-header-layout-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.vertical_padding }}px 0;
    border-bottom: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
  }

  .ai-header-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 {{ block.settings.horizontal_padding }}px;
    gap: {{ block.settings.spacing }}px;
  }

  .ai-header-logo-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }

  .ai-header-logo-{{ ai_gen_id }} img {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
    display: block;
  }

  .ai-header-logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width }}px;
    height: 60px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
  }

  .ai-header-logo-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 100px;
    max-height: 50px;
  }

  .ai-header-nav-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    grid-column: 2;
  }

  .ai-header-nav-list-{{ ai_gen_id }} {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: {{ block.settings.nav_spacing }}px;
    align-items: center;
  }

  .ai-header-nav-item-{{ ai_gen_id }} {
    margin: 0;
  }

  .ai-header-nav-link-{{ ai_gen_id }} {
    color: {{ block.settings.nav_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.nav_font_size }}px;
    font-weight: {{ block.settings.nav_font_weight }};
    transition: color 0.3s ease;
    white-space: nowrap;
  }

  .ai-header-nav-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.nav_hover_color }};
  }

  .ai-header-actions-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: {{ block.settings.action_spacing }}px;
  }

  .ai-header-action-link-{{ ai_gen_id }} {
    color: {{ block.settings.action_icon_color }};
    text-decoration: none;
    display: flex;
    align-items: center;
    transition: color 0.3s ease;
  }

  .ai-header-action-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.action_hover_color }};
  }

  .ai-header-action-link-{{ ai_gen_id }} svg {
    width: {{ block.settings.action_icon_size }}px;
    height: {{ block.settings.action_icon_size }}px;
  }

  @media screen and (max-width: 989px) {
    .ai-header-container-{{ ai_gen_id }} {
      grid-template-columns: auto 1fr auto;
      gap: {{ block.settings.mobile_spacing }}px;
    }

    .ai-header-logo-{{ ai_gen_id }} {
      order: {% if block.settings.mobile_logo_position == 'left' %}1{% else %}2{% endif %};
    }

    .ai-header-logo-{{ ai_gen_id }} img {
      max-width: {{ block.settings.mobile_logo_width }}px;
    }

    .ai-header-logo-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_logo_width }}px;
      height: 50px;
    }

    .ai-header-nav-{{ ai_gen_id }} {
      {% if block.settings.mobile_nav_display == 'hidden' %}
        display: none;
      {% else %}
        order: {% if block.settings.mobile_logo_position == 'left' %}2{% else %}1{% endif %};
        grid-column: auto;
      {% endif %}
    }

    .ai-header-nav-list-{{ ai_gen_id }} {
      gap: {{ block.settings.mobile_nav_spacing }}px;
      {% if block.settings.mobile_nav_display == 'stacked' %}
        flex-direction: column;
      {% endif %}
    }

    .ai-header-nav-link-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_nav_font_size }}px;
    }

    .ai-header-actions-{{ ai_gen_id }} {
      order: 3;
      gap: {{ block.settings.mobile_action_spacing }}px;
    }

    .ai-header-action-link-{{ ai_gen_id }} svg {
      width: {{ block.settings.mobile_action_icon_size }}px;
      height: {{ block.settings.mobile_action_icon_size }}px;
    }
  }
{% endstyle %}

<header-layout-{{ ai_gen_id }} class="ai-header-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-header-container-{{ ai_gen_id }}">
    <div class="ai-header-logo-{{ ai_gen_id }}">
      {% if block.settings.logo != blank %}
        <a href="/">
          <img
            src="{{ block.settings.logo | image_url: width: 400 }}"
            alt="{{ shop.name }}"
            width="{{ block.settings.logo.width }}"
            height="{{ block.settings.logo.height }}"
            loading="eager"
          >
        </a>
      {% else %}
        <div class="ai-header-logo-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    <nav class="ai-header-nav-{{ ai_gen_id }}" role="navigation">
      <ul class="ai-header-nav-list-{{ ai_gen_id }}">
        {% for i in (1..6) %}
          {% liquid
            assign link_key = 'nav_link_' | append: i
            assign label_key = 'nav_label_' | append: i
            assign link = block.settings[link_key]
            assign label = block.settings[label_key]
          %}
          {% if label != blank %}
            <li class="ai-header-nav-item-{{ ai_gen_id }}">
              <a href="{{ link }}" class="ai-header-nav-link-{{ ai_gen_id }}">
                {{ label }}
              </a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </nav>

    <div class="ai-header-actions-{{ ai_gen_id }}">
      {% if block.settings.show_search %}
        <a href="/search" class="ai-header-action-link-{{ ai_gen_id }}" aria-label="Search">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </a>
      {% endif %}
      {% if block.settings.show_account %}
        <a href="/account" class="ai-header-action-link-{{ ai_gen_id }}" aria-label="Account">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </a>
      {% endif %}
      {% if block.settings.show_cart %}
        <a href="/cart" class="ai-header-action-link-{{ ai_gen_id }}" aria-label="Cart">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
        </a>
      {% endif %}
    </div>
  </div>
</header-layout-{{ ai_gen_id }}>

<script>
  (function() {
    class HeaderLayout{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.handleResize();
        window.addEventListener('resize', this.handleResize.bind(this));
      }

      disconnectedCallback() {
        window.removeEventListener('resize', this.handleResize.bind(this));
      }

      handleResize() {
        const container = this.querySelector('.ai-header-container-{{ ai_gen_id }}');
        if (!container) return;

        if (window.innerWidth <= 989) {
          container.setAttribute('data-mobile', 'true');
        } else {
          container.removeAttribute('data-mobile');
        }
      }
    }

    customElements.define('header-layout-{{ ai_gen_id }}', HeaderLayout{{ ai_gen_id }});
  })();
</script>

