    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-pdp-thumbnails-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    gap: 12px;
  }

  .ai-pdp-thumbnail-{{ ai_gen_id }} {
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 8px;
    cursor: pointer;
    border: 2px solid transparent;
    transition: border-color 0.2s ease;
  }

  .ai-pdp-thumbnail-{{ ai_gen_id }}.active {
