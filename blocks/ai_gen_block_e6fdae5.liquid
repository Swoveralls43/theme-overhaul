    font-size: {{ block.settings.price_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
  }

  .ai-pdp-variant-selector-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-pdp-variant-label-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
  }

  .ai-pdp-variant-select-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 16px;
    font-size: 16px;
    border: 2px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: #ffffff;
    color: {{ block.settings.text_color }};
    cursor: pointer;
  }

  .ai-pdp-variant-select-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.accent_color }};
  }

  .ai-pdp-add-to-cart-{{ ai_gen_id }} {
    width: 100%;
    padding: 16px 32px;
    font-size: 16px;
    font-weight: 600;
    background-color: {{ block.settings.button_color }};
