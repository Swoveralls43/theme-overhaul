<product-pdp-{{ ai_gen_id }} class="ai-pdp-complete-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-pdp-wrapper-{{ ai_gen_id }}">
    <div class="ai-pdp-grid-{{ ai_gen_id }}">
      <div class="ai-pdp-gallery-{{ ai_gen_id }}">
        <div class="ai-pdp-main-image-{{ ai_gen_id }}">
          {% if product.featured_image %}
            <img
              src="{{ product.featured_image | image_url: width: 1000 }}"
              alt="{{ product.featured_image.alt | escape }}"
              width="1000"
              height="1000"
              loading="eager"
              data-main-image
            >
          {% else %}
            {{ 'product-1' | placeholder_svg_tag }}
          {% endif %}
        </div>

        {% if product.images.size > 1 %}
          <div class="ai-pdp-thumbnails-{{ ai_gen_id }}">
            {% for image in product.images limit: 6 %}
              <div class="ai-pdp-thumbnail-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-thumbnail data-image-url="{{ image | image_url: width: 1000 }}">
                <img
                  src="{{ image | image_url: width: 200 }}"
                  alt="{{ image.alt | escape }}"
                  width="200"
                  height="200"
                  loading="lazy"
                >
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <div class="ai-pdp-info-{{ ai_gen_id }}">
        <h1 class="ai-pdp-title-{{ ai_gen_id }}">{{ product.title }}</h1>

        <div class="ai-pdp-price-{{ ai_gen_id }}" data-price>
          {{ product.selected_or_first_available_variant.price | money }}
        </div>

        {% if product.has_only_default_variant == false %}
          <div class="ai-pdp-variant-selector-{{ ai_gen_id }}">
            <label class="ai-pdp-variant-label-{{ ai_gen_id }}" for="variant-select-{{ ai_gen_id }}">
              {{ block.settings.variant_label }}
            </label>
            <select
              id="variant-select-{{ ai_gen_id }}"
              class="ai-pdp-variant-select-{{ ai_gen_id }}"
              data-variant-select
            >
              {% for variant in product.variants %}
                <option
                  value="{{ variant.id }}"
                  {% if variant == product.selected_or_first_available_variant %}selected{% endif %}
                  {% unless variant.available %}disabled{% endunless %}
                  data-price="{{ variant.price }}"
                >
                  {{ variant.title }} - {{ variant.price | money }}
                  {% unless variant.available %} (Sold out){% endunless %}
                </option>
              {% endfor %}
            </select>
          </div>
        {% endif %}

        <button
          type="button"
          class="ai-pdp-add-to-cart-{{ ai_gen_id }}"
          data-add-to-cart
          {% unless product.selected_or_first_available_variant.available %}disabled{% endunless %}
        >
          {% if product.selected_or_first_available_variant.available %}
            {{ block.settings.add_to_cart_text }}
          {% else %}
            Sold out
          {% endif %}
        </button>

        <div class="ai-pdp-accordions-{{ ai_gen_id }}">
          {% if block.settings.show_description and product.description != blank %}
            <div class="ai-pdp-accordion-{{ ai_gen_id }}" data-accordion>
              <button class="ai-pdp-accordion-header-{{ ai_gen_id }}" type="button" data-accordion-trigger>
                <span class="ai-pdp-accordion-title-{{ ai_gen_id }}">{{ block.settings.description_title }}</span>
                <svg class="ai-pdp-accordion-icon-{{ ai_gen_id }}" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </button>
              <div class="ai-pdp-accordion-content-{{ ai_gen_id }}">
                <div class="ai-pdp-accordion-body-{{ ai_gen_id }}">
                  {{ product.description }}
                </div>
              </div>
            </div>
          {% endif %}

          {% if block.settings.show_returns and block.settings.returns_text != blank %}
            <div class="ai-pdp-accordion-{{ ai_gen_id }}" data-accordion>
              <button class="ai-pdp-accordion-header-{{ ai_gen_id }}" type="button" data-accordion-trigger>
                <span class="ai-pdp-accordion-title-{{ ai_gen_id }}">{{ block.settings.returns_title }}</span>
                <svg class="ai-pdp-accordion-icon-{{ ai_gen_id }}" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </button>
              <div class="ai-pdp-accordion-content-{{ ai_gen_id }}">
                <div class="ai-pdp-accordion-body-{{ ai_gen_id }}">
                  {{ block.settings.returns_text }}
                </div>
              </div>
            </div>
          {% endif %}

          {% if block.settings.show_fabric_care and block.settings.fabric_care_text != blank %}
            <div class="ai-pdp-accordion-{{ ai_gen_id }}" data-accordion>
              <button class="ai-pdp-accordion-header-{{ ai_gen_id }}" type="button" data-accordion-trigger>
                <span class="ai-pdp-accordion-title-{{ ai_gen_id }}">{{ block.settings.fabric_care_title }}</span>
                <svg class="ai-pdp-accordion-icon-{{ ai_gen_id }}" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </button>
              <div class="ai-pdp-accordion-content-{{ ai_gen_id }}">
                <div class="ai-pdp-accordion-body-{{ ai_gen_id }}">
                  {{ block.settings.fabric_care_text }}
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>

    {% if block.settings.show_value_props %}
      <div class="ai-pdp-value-props-{{ ai_gen_id }}">
        <div class="ai-pdp-value-props-grid-{{ ai_gen_id }}">
          {% for i in (1..3) %}
            {% liquid
              assign enabled_key = 'feature_' | append: i | append: '_enabled'
              assign icon_key = 'feature_' | append: i | append: '_icon'
              assign title_key = 'feature_' | append: i | append: '_title'
              assign text_key = 'feature_' | append: i | append: '_text'

              assign enabled = block.settings[enabled_key]
              assign icon = block.settings[icon_key]
              assign title = block.settings[title_key]
              assign text = block.settings[text_key]
            %}

            {% if enabled %}
              <div class="ai-pdp-value-prop-{{ ai_gen_id }}">
                <div class="ai-pdp-value-icon-{{ ai_gen_id }}">
                  {% if icon %}
                    <img
                      src="{{ icon | image_url: width: 200 }}"
                      alt="{{ title | escape }}"
                      width="200"
                      height="200"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="ai-pdp-value-icon-placeholder-{{ ai_gen_id }}">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <path d="M12 6v6l4 2"/>
                      </svg>
                    </div>
                  {% endif %}
                </div>
                <div>
                  {% if title != blank %}
                    <h3 class="ai-pdp-value-title-{{ ai_gen_id }}">{{ title }}</h3>
                  {% endif %}
                  {% if text != blank %}
                    <p class="ai-pdp-value-text-{{ ai_gen_id }}">{{ text }}</p>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</product-pdp-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductPDP{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.variantSelect = this.querySelector('[data-variant-select]');
        this.addToCartButton = this.querySelector('[data-add-to-cart]');
        this.priceElement = this.querySelector('[data-price]');
        this.mainImage = this.querySelector('[data-main-image]');
        this.thumbnails = this.querySelectorAll('[data-thumbnail]');
        this.accordions = this.querySelectorAll('[data-accordion]');
      }

      connectedCallback() {
        this.setupVariantSelector();
        this.setupThumbnails();
        this.setupAccordions();
        this.setupAddToCart();
      }

      setupVariantSelector() {
        if (!this.variantSelect) return;

        this.variantSelect.addEventListener('change', (e) => {
          const selectedOption = e.target.options[e.target.selectedIndex];
          const price = selectedOption.dataset.price;
          const isAvailable = !selectedOption.disabled;

          if (this.priceElement && price) {
            const formattedPrice = new Intl.NumberFormat('en-US', {
              style: 'currency',
              currency: 'USD'
            }).format(price / 100);
            this.priceElement.textContent = formattedPrice;
          }

          if (this.addToCartButton) {
            this.addToCartButton.disabled = !isAvailable;
            this.addToCartButton.textContent = isAvailable ? '{{ block.settings.add_to_cart_text }}' : 'Sold out';
          }
        });
      }

      setupThumbnails() {
        this.thumbnails.forEach((thumbnail) => {
          thumbnail.addEventListener('click', () => {
            this.thumbnails.forEach(t => t.classList.remove('active'));
            thumbnail.classList.add('active');

            const imageUrl = thumbnail.dataset.imageUrl;
            if (this.mainImage && imageUrl) {
              this.mainImage.src = imageUrl;
            }
          });
        });
      }

      setupAccordions() {
        this.accordions.forEach((accordion) => {
          const trigger = accordion.querySelector('[data-accordion-trigger]');
          
          trigger.addEventListener('click', () => {
            const isActive = accordion.classList.contains('active');
            
            this.accordions.forEach(acc => acc.classList.remove('active'));
            
            if (!isActive) {
              accordion.classList.add('active');
            }
          });
        });
      }

      setupAddToCart() {
        if (!this.addToCartButton) return;

        this.addToCartButton.addEventListener('click', () => {
          const variantId = this.variantSelect 
            ? this.variantSelect.value 
            : this.addToCartButton.dataset.variantId;

          if (!variantId) return;

          const formData = {
            items: [{
              id: variantId,
              quantity: 1
            }]
          };

          fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(formData)
          })
          .then(response => response.json())
          .then(data => {
            window.location.href = '/cart';
          })
          .catch((error) => {
            console.error('Error:', error);
          });
        });
      }
    }

    customElements.define('product-pdp-{{ ai_gen_id }}', ProductPDP{{ ai_gen_id }});
  })();
</script>

