    opacity: 0.8;
  }

  .ai-pdp-thumbnail-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-pdp-info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .ai-pdp-title-{{ ai_gen_id }} {
