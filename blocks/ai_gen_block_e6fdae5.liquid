    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-pdp-main-image-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    background-color: #f4f4f4;
