<advertorial-landing-{{ ai_gen_id }} class="ai-advertorial-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-advertorial-hero-{{ ai_gen_id }}" data-scroll-target="products">
    {% if block.settings.hero_image_desktop %}
      <div class="ai-advertorial-hero-image-{{ ai_gen_id }} ai-advertorial-hero-desktop-{{ ai_gen_id }}">
        <img
          src="{{ block.settings.hero_image_desktop | image_url: width: 2000 }}"
          alt="{{ block.settings.hero_image_desktop.alt | escape }}"
          loading="eager"
          width="{{ block.settings.hero_image_desktop.width }}"
          height="{{ block.settings.hero_image_desktop.height }}"
        >
      </div>
    {% else %}
      <div class="ai-advertorial-hero-placeholder-{{ ai_gen_id }} ai-advertorial-hero-desktop-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}

    {% if block.settings.hero_image_mobile %}
      <div class="ai-advertorial-hero-image-{{ ai_gen_id }} ai-advertorial-hero-mobile-{{ ai_gen_id }}">
        <img
          src="{{ block.settings.hero_image_mobile | image_url: width: 1000 }}"
          alt="{{ block.settings.hero_image_mobile.alt | escape }}"
          loading="eager"
          width="{{ block.settings.hero_image_mobile.width }}"
          height="{{ block.settings.hero_image_mobile.height }}"
        >
      </div>
    {% else %}
      <div class="ai-advertorial-hero-placeholder-{{ ai_gen_id }} ai-advertorial-hero-mobile-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}

    <div class="ai-advertorial-hero-content-{{ ai_gen_id }}">
      {% if block.settings.hero_title != blank %}
        <h1 class="ai-advertorial-hero-title-{{ ai_gen_id }}">{{ block.settings.hero_title }}</h1>
      {% endif %}
      {% if block.settings.hero_subtitle != blank %}
        <p class="ai-advertorial-hero-subtitle-{{ ai_gen_id }}">{{ block.settings.hero_subtitle }}</p>
      {% endif %}
      {% if block.settings.show_hero_button and block.settings.hero_button_text != blank %}
        <a href="#products-{{ ai_gen_id }}" class="ai-advertorial-hero-button-{{ ai_gen_id }}">
          {{ block.settings.hero_button_text }}
        </a>
      {% endif %}
    </div>
  </div>

  {% if block.settings.richtext_content != blank %}
    <div class="ai-advertorial-richtext-{{ ai_gen_id }}">
      <div class="ai-advertorial-richtext-content-{{ ai_gen_id }}">
        {{ block.settings.richtext_content }}
      </div>
    </div>
  {% endif %}

  <div id="products-{{ ai_gen_id }}" class="ai-advertorial-products-{{ ai_gen_id }}">
    {% for i in (1..2) %}
      {% liquid
        assign product_key = 'product_' | append: i
        assign product = block.settings[product_key]
      %}

      {% if product != blank %}
        <div class="ai-advertorial-product-{{ ai_gen_id }}" data-product-index="{{ i }}">
          <div class="ai-advertorial-product-images-{{ ai_gen_id }}">
            <div class="ai-advertorial-featured-image-{{ ai_gen_id }}" data-featured-image="{{ i }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  loading="lazy"
                  width="800"
                  height="800"
                >
              {% else %}
                <div class="ai-advertorial-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            {% if product.images.size > 1 %}
              <div class="ai-advertorial-carousel-{{ ai_gen_id }}">
                {% for image in product.images limit: 8 %}
                  <div class="ai-advertorial-carousel-thumb-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-image-index="{{ forloop.index0 }}" data-product-index="{{ i }}">
                    <img
                      src="{{ image | image_url: width: 200 }}"
                      alt="{{ image.alt | escape }}"
                      loading="lazy"
                      width="200"
                      height="200"
                    >
                  </div>
                {% endfor %}
              </div>
            {% endif %}
          </div>

          <div class="ai-advertorial-product-info-{{ ai_gen_id }}">
            <h2 class="ai-advertorial-product-title-{{ ai_gen_id }}">{{ product.title }}</h2>
            <div class="ai-advertorial-product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>

            <form class="ai-advertorial-product-form-{{ ai_gen_id }}" data-product-form="{{ i }}">
              {% if product.has_only_default_variant %}
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              {% else %}
                <div class="ai-advertorial-size-selector-{{ ai_gen_id }}">
                  <label class="ai-advertorial-size-label-{{ ai_gen_id }}" for="variant-{{ ai_gen_id }}-{{ i }}">
                    Size
                  </label>
                  <select
                    id="variant-{{ ai_gen_id }}-{{ i }}"
                    name="id"
                    class="ai-advertorial-size-select-{{ ai_gen_id }}"
                  >
                    {% for variant in product.variants %}
                      <option
                        value="{{ variant.id }}"
                        {% unless variant.available %}disabled{% endunless %}
                      >
                        {{ variant.title }}{% unless variant.available %} - Sold Out{% endunless %}
                      </option>
                    {% endfor %}
                  </select>
                </div>
              {% endif %}

              <button
                type="submit"
                class="ai-advertorial-add-to-cart-{{ ai_gen_id }}"
                {% unless product.available %}disabled{% endunless %}
              >
                {% if product.available %}
                  {{ block.settings.add_to_cart_text }}
                {% else %}
                  Sold Out
                {% endif %}
              </button>
            </form>

            {% if block.settings.button_subtext != blank %}
              <div class="ai-advertorial-button-subtext-{{ ai_gen_id }}">
                {{ block.settings.button_subtext }}
              </div>
            {% endif %}

            {% if product.description != blank %}
              <div class="ai-advertorial-accordion-{{ ai_gen_id }}">
                <div class="ai-advertorial-accordion-item-{{ ai_gen_id }}">
                  <button class="ai-advertorial-accordion-button-{{ ai_gen_id }}" data-accordion-trigger="{{ i }}">
                    <span>Product Description</span>
                    <span class="ai-advertorial-accordion-icon-{{ ai_gen_id }}">
                      <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    </span>
                  </button>
                  <div class="ai-advertorial-accordion-content-{{ ai_gen_id }}" data-accordion-content="{{ i }}">
                    <div class="ai-advertorial-accordion-text-{{ ai_gen_id }}">
                      {{ product.description }}
                    </div>
                  </div>
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</advertorial-landing-{{ ai_gen_id }}>

<script>
  (function() {
    class AdvertorialLanding{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupHeroScroll();
        this.setupCarousel();
        this.setupAccordion();
        this.setupAddToCart();
      }

      setupHeroScroll() {
        const hero = this.querySelector('.ai-advertorial-hero-{{ ai_gen_id }}');
        if (!hero) return;

        hero.addEventListener('click', (e) => {
          if (e.target.closest('.ai-advertorial-hero-button-{{ ai_gen_id }}')) {
            e.preventDefault();
          }
          
          const target = this.querySelector('#products-{{ ai_gen_id }}');
          if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        });
      }

      setupCarousel() {
        const thumbs = this.querySelectorAll('.ai-advertorial-carousel-thumb-{{ ai_gen_id }}');
        
        thumbs.forEach(thumb => {
          thumb.addEventListener('click', () => {
            const productIndex = thumb.dataset.productIndex;
            const imageIndex = thumb.dataset.imageIndex;
            const product = this.querySelector(`[data-product-index="${productIndex}"]`);
            
            if (!product) return;

            const productObj = this.getProductData(productIndex);
            if (!productObj || !productObj.images[imageIndex]) return;

            const featuredImage = product.querySelector(`[data-featured-image="${productIndex}"]`);
            const image = productObj.images[imageIndex];
            
            featuredImage.innerHTML = `
              <img
                src="${image.src.replace('.jpg', '_800x.jpg').replace('.png', '_800x.png')}"
                alt="${image.alt || ''}"
                loading="lazy"
                width="800"
                height="800"
              >
            `;

            product.querySelectorAll('.ai-advertorial-carousel-thumb-{{ ai_gen_id }}').forEach(t => {
              t.classList.remove('active');
            });
            thumb.classList.add('active');
          });
        });
      }

      setupAccordion() {
        const triggers = this.querySelectorAll('[data-accordion-trigger]');
        
        triggers.forEach(trigger => {
          trigger.addEventListener('click', () => {
            const index = trigger.dataset.accordionTrigger;
            const content = this.querySelector(`[data-accordion-content="${index}"]`);
            const icon = trigger.querySelector('.ai-advertorial-accordion-icon-{{ ai_gen_id }}');
            
            if (!content) return;

            const isActive = content.classList.contains('active');
            
            content.classList.toggle('active');
            if (icon) {
              icon.classList.toggle('active');
            }
          });
        });
      }

      setupAddToCart() {
        const forms = this.querySelectorAll('[data-product-form]');
        
        forms.forEach(form => {
          form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(form);
            const button = form.querySelector('.ai-advertorial-add-to-cart-{{ ai_gen_id }}');
            const originalText = button.textContent;
            
            button.disabled = true;
            button.textContent = 'Adding...';
            
            try {
              const response = await fetch('/cart/add.js', {
                method: 'POST',
                body: formData
              });
              
              if (response.ok) {
                button.textContent = 'Added!';
                
                const cartDrawer = document.querySelector('cart-drawer');
                if (cartDrawer) {
                  cartDrawer.open();
                } else {
                  window.location.href = '/cart';
                }
                
                setTimeout(() => {
                  button.disabled = false;
                  button.textContent = originalText;
                }, 2000);
              } else {
                throw new Error('Failed to add to cart');
              }
            } catch (error) {
              button.textContent = 'Error - Try Again';
              button.disabled = false;
              
              setTimeout(() => {
                button.textContent = originalText;
              }, 2000);
            }
          });
        });
      }

      getProductData(index) {
        const products = [
          {% for i in (1..2) %}
            {% liquid
              assign product_key = 'product_' | append: i
              assign product = block.settings[product_key]
            %}
            {% if product != blank %}
              {
                images: [
                  {% for image in product.images limit: 8 %}
                    {
                      src: "{{ image | image_url: width: 800 }}",
                      alt: "{{ image.alt | escape }}"
                    }{% unless forloop.last %},{% endunless %}
                  {% endfor %}
                ]
              }{% unless forloop.last %},{% endunless %}
            {% else %}
              null{% unless forloop.last %},{% endunless %}
            {% endif %}
          {% endfor %}
        ];
        
        return products[index - 1];
      }
    }

    customElements.define('advertorial-landing-{{ ai_gen_id }}', AdvertorialLanding{{ ai_gen_id }});
  })();
</script>

