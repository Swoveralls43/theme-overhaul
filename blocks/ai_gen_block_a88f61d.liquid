{% doc %}
  @prompt
    Create a hero header  and subheader that is mobile optimized and easy to read
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-header-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
    max-width: 100%;
  }

  .ai-hero-header__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_width }}px;
    margin: 0 auto;
  }

  .ai-hero-header__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size_mobile }}px;
    line-height: 1.2;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.spacing_between }}px;
    font-weight: {{ block.settings.heading_weight }};
    letter-spacing: {{ block.settings.heading_letter_spacing }}px;
  }

  .ai-hero-header__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size_mobile }}px;
    line-height: 1.5;
    color: {{ block.settings.subheading_color }};
    margin: 0;
    font-weight: {{ block.settings.subheading_weight }};
    max-width: {{ block.settings.subheading_max_width }}px;
    margin-left: auto;
    margin-right: auto;
  }

  @media screen and (min-width: 750px) {
    .ai-hero-header-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top_desktop }}px 40px {{ block.settings.padding_bottom_desktop }}px;
    }

    .ai-hero-header__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_desktop }}px;
    }

    .ai-hero-header__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size_desktop }}px;
    }
  }
{% endstyle %}

<div class="ai-hero-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-header__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-header__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-hero-header__subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Hero header",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Discover amazing products and exceptional service</p>"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "content_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Content width",
      "default": 800
    },
    {
      "type": "range",
      "id": "spacing_between",
      "min": 8,
      "max": 48,
      "step": 4,
      "unit": "px",
      "label": "Space between heading and subheading",
      "default": 16
    },
    {
      "type": "header",
      "content": "Heading style"
    },
    {
      "type": "range",
      "id": "heading_size_mobile",
      "min": 24,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Mobile size",
      "default": 32
    },
    {
      "type": "range",
      "id": "heading_size_desktop",
      "min": 32,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Desktop size",
      "default": 56
    },
    {
      "type": "select",
      "id": "heading_weight",
      "label": "Font weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi-bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "700"
    },
    {
      "type": "range",
      "id": "heading_letter_spacing",
      "min": -2,
      "max": 4,
      "step": 0.5,
      "unit": "px",
      "label": "Letter spacing",
      "default": 0
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Color",
      "default": "#121212"
    },
    {
      "type": "header",
      "content": "Subheading style"
    },
    {
      "type": "range",
      "id": "subheading_size_mobile",
      "min": 14,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Mobile size",
      "default": 16
    },
    {
      "type": "range",
      "id": "subheading_size_desktop",
      "min": 16,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Desktop size",
      "default": 20
    },
    {
      "type": "select",
      "id": "subheading_weight",
      "label": "Font weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi-bold"
        }
      ],
      "default": "400"
    },
    {
      "type": "range",
      "id": "subheading_max_width",
      "min": 400,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 700
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Color",
      "default": "#121212"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 20,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 20,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile bottom padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 40,
      "max": 200,
      "step": 8,
      "unit": "px",
      "label": "Desktop top padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 40,
      "max": 200,
      "step": 8,
      "unit": "px",
      "label": "Desktop bottom padding",
      "default": 80
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f5f6f8"
    }
  ],
  "presets": [
    {
      "name": "Hero header"
    }
  ]
}
{% endschema %}
