    {% endif %}
    {% if block.settings.subtitle != blank %}
      <p class="ai-bundle-promo__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="ai-bundle-promo__section-{{ ai_gen_id }}" id="swoveralls-section-{{ ai_gen_id }}">
    <h3 class="ai-bundle-promo__section-title-{{ ai_gen_id }}">
      <span class="ai-bundle-promo__step-badge-{{ ai_gen_id }}">Step 1</span>
      {{ block.settings.swoveralls_title }}
    </h3>
    <div class="ai-bundle-promo__products-grid-{{ ai_gen_id }}" data-section="swoveralls">
      {% if block.settings.swoveralls_collection != blank %}
        {% for product in block.settings.swoveralls_collection.products %}
          <div class="ai-bundle-promo__product-card-{{ ai_gen_id }}" data-product-id="{{ product.id }}" data-product-title="{{ product.title | escape }}" data-type="swoveralls">
            <div class="ai-bundle-promo__checkmark-{{ ai_gen_id }}">✓</div>
            {% if product.featured_image %}
              <img src="{{ product.featured_image | image_url: width: 300 }}" alt="{{ product.featured_image.alt | escape }}" class="ai-bundle-promo__product-image-{{ ai_gen_id }}" loading="lazy">
            {% endif %}
            <h4 class="ai-bundle-promo__product-title-{{ ai_gen_id }}">{{ product.title }}</h4>
            <p class="ai-bundle-promo__product-price-{{ ai_gen_id }}">{{ product.price | money }}</p>
            <select class="ai-bundle-promo__size-select-{{ ai_gen_id }}" data-product-id="{{ product.id }}">
              <option value="">Select size</option>
              {% for variant in product.variants %}
                <option value="{{ variant.id }}" data-price="{{ variant.price }}" {% unless variant.available %}class="sold-out"{% endunless %}>
                  {{ variant.title }}{% unless variant.available %} (Sold Out){% endunless %}
                </option>
              {% endfor %}
            </select>
          </div>
        {% endfor %}
      {% else %}
        <p>Please select a Swoveralls collection in the block settings.</p>
      {% endif %}
    </div>
  </div>

