    <h3 class="ai-bundle-promo__section-title-{{ ai_gen_id }}">
      <span class="ai-bundle-promo__step-badge-{{ ai_gen_id }}">Step 2</span>
      {{ block.settings.swovie_title }}
    </h3>
    <div class="ai-bundle-promo__products-grid-{{ ai_gen_id }}" data-section="swovie">
      {% if block.settings.swovie_collection != blank %}
        {% for product in block.settings.swovie_collection.products %}
          <div class="ai-bundle-promo__product-card-{{ ai_gen_id }}" data-product-id="{{ product.id }}" data-product-title="{{ product.title | escape }}" data-type="swovie">
            <div class="ai-bundle-promo__checkmark-{{ ai_gen_id }}">✓</div>
            {% if product.featured_image %}
              <img src="{{ product.featured_image | image_url: width: 300 }}" alt="{{ product.featured_image.alt | escape }}" class="ai-bundle-promo__product-image-{{ ai_gen_id }}" loading="lazy">
            {% endif %}
            <h4 class="ai-bundle-promo__product-title-{{ ai_gen_id }}">{{ product.title }}</h4>
            <p class="ai-bundle-promo__product-price-{{ ai_gen_id }}">{{ product.price | money }}</p>
            <select class="ai-bundle-promo__size-select-{{ ai_gen_id }}" data-product-id="{{ product.id }}">
              <option value="">Select size</option>
              {% for variant in product.variants %}
                <option value="{{ variant.id }}" data-price="{{ variant.price }}" {% unless variant.available %}class="sold-out"{% endunless %}>
                  {{ variant.title }}{% unless variant.available %} (Sold Out){% endunless %}
                </option>
              {% endfor %}
            </select>
          </div>
        {% endfor %}
      {% else %}
        <p>Please select a Swovie Shorts collection in the block settings.</p>
      {% endif %}
    </div>
  </div>

  <div class="ai-bundle-promo__checkout-section-{{ ai_gen_id }}" id="checkout-section-{{ ai_gen_id }}">
    <div class="ai-bundle-promo__selection-summary-{{ ai_gen_id }}" style="display: none;">
      <div class="ai-bundle-promo__summary-item-{{ ai_gen_id }}" id="swoveralls-summary-{{ ai_gen_id }}">
        <span>Swoveralls:</span>
        <span id="swoveralls-name-{{ ai_gen_id }}">Not selected</span>
      </div>
      <div class="ai-bundle-promo__summary-item-{{ ai_gen_id }}" id="swovie-summary-{{ ai_gen_id }}">
        <span>Swovie Shorts:</span>
        <span id="swovie-name-{{ ai_gen_id }}">Not selected</span>
      </div>
    </div>

    <div class="ai-bundle-promo__savings-display-{{ ai_gen_id }}">
      <h3 class="ai-bundle-promo__savings-title-{{ ai_gen_id }}">Your Bundle Savings</h3>
      <div class="ai-bundle-promo__savings-amount-{{ ai_gen_id }}" id="savings-amount-{{ ai_gen_id }}">$0.00</div>
      <div>
        <span class="ai-bundle-promo__original-price-{{ ai_gen_id }}" id="original-price-{{ ai_gen_id }}">$0.00</span>
        <span class="ai-bundle-promo__bundle-price-{{ ai_gen_id }}" id="bundle-price-{{ ai_gen_id }}">$0.00</span>
      </div>
    </div>

    <button class="ai-bundle-promo__add-to-cart-btn-{{ ai_gen_id }}" id="add-bundle-btn-{{ ai_gen_id }}" disabled>
      Add Bundle to Cart
    </button>
    <div class="ai-bundle-promo__error-message-{{ ai_gen_id }}" id="error-message-{{ ai_gen_id }}" style="display: none;"></div>
  </div>
</bundle-promo-{{ ai_gen_id }}>

<script>
(function() {
  class BundlePromo{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
      this.selectedSwoveralls = null;
      this.selectedSwovie = null;
      this.discountPercentage = {{ block.settings.discount_percentage }};
    }

    connectedCallback() {
      this.setupEventListeners();
    }

    setupEventListeners() {
      const productCards = this.querySelectorAll('.ai-bundle-promo__product-card-{{ ai_gen_id }}');
      const sizeSelects = this.querySelectorAll('.ai-bundle-promo__size-select-{{ ai_gen_id }}');
      const addBundleBtn = this.querySelector('#add-bundle-btn-{{ ai_gen_id }}');

      productCards.forEach(card => {
        card.addEventListener('click', (e) => {
          if (e.target.tagName !== 'SELECT' && e.target.tagName !== 'OPTION') {
            const select = card.querySelector('.ai-bundle-promo__size-select-{{ ai_gen_id }}');
            if (select) {
              select.focus();
            }
          }
        });
      });

      sizeSelects.forEach(select => {
        select.addEventListener('change', (e) => {
          this.handleSizeSelection(e.target);
        });
      });

      addBundleBtn.addEventListener('click', () => {
        this.addBundleToCart();
      });
    }

    handleSizeSelection(selectElement) {
      const card = selectElement.closest('.ai-bundle-promo__product-card-{{ ai_gen_id }}');
      const productType = card.dataset.type;
      const variantId = selectElement.value;
      const productId = selectElement.dataset.productId;
      const productTitle = card.dataset.productTitle;
      const selectedOption = selectElement.options[selectElement.selectedIndex];
      const price = selectedOption.dataset.price;
      const size = selectedOption.text;

      if (!variantId) {
        return;
      }

      const allCards = this.querySelectorAll(`.ai-bundle-promo__product-card-{{ ai_gen_id }}[data-type="${productType}"]`);
      allCards.forEach(c => c.classList.remove('selected'));
      card.classList.add('selected');

      if (productType === 'swoveralls') {
        this.selectedSwoveralls = {
          variantId: variantId,
          productId: productId,
          title: productTitle,
          size: size,
          price: parseFloat(price)
        };
        this.updateSummary('swoveralls', `${productTitle} - ${size}`);
        
        setTimeout(() => {
          const swovieSection = this.querySelector('#swovie-section-{{ ai_gen_id }}');
          if (swovieSection) {
            swovieSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        }, 300);
      } else if (productType === 'swovie') {
        this.selectedSwovie = {
          variantId: variantId,
          productId: productId,
          title: productTitle,
          size: size,
          price: parseFloat(price)
        };
        this.updateSummary('swovie', `${productTitle} - ${size}`);
        
        setTimeout(() => {
          const checkoutSection = this.querySelector('#checkout-section-{{ ai_gen_id }}');
          if (checkoutSection) {
            checkoutSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        }, 300);
      }

      this.updatePricing();
      this.updateAddToCartButton();
    }

    updateSummary(type, text) {
      const summaryContainer = this.querySelector('.ai-bundle-promo__selection-summary-{{ ai_gen_id }}');
      const summaryElement = this.querySelector(`#${type}-name-{{ ai_gen_id }}`);
      
      if (summaryElement) {
        summaryElement.textContent = text;
      }

      if (this.selectedSwoveralls || this.selectedSwovie) {
        summaryContainer.style.display = 'block';
      }
    }

    updatePricing() {
      if (!this.selectedSwoveralls || !this.selectedSwovie) {
        return;
      }

      const swoverallsPrice = this.selectedSwoveralls.price;
      const swoviePrice = this.selectedSwovie.price;
      const originalTotal = swoverallsPrice + swoviePrice;
      const discount = swoviePrice * (this.discountPercentage / 100);
      const bundleTotal = originalTotal - discount;

      const savingsAmountEl = this.querySelector('#savings-amount-{{ ai_gen_id }}');
      const originalPriceEl = this.querySelector('#original-price-{{ ai_gen_id }}');
      const bundlePriceEl = this.querySelector('#bundle-price-{{ ai_gen_id }}');

      if (savingsAmountEl) {
        savingsAmountEl.textContent = this.formatMoney(discount);
      }
      if (originalPriceEl) {
        originalPriceEl.textContent = this.formatMoney(originalTotal);
      }
      if (bundlePriceEl) {
        bundlePriceEl.textContent = this.formatMoney(bundleTotal);
      }
    }

    updateAddToCartButton() {
      const addBundleBtn = this.querySelector('#add-bundle-btn-{{ ai_gen_id }}');
      
      if (this.selectedSwoveralls && this.selectedSwovie) {
        addBundleBtn.disabled = false;
      } else {
        addBundleBtn.disabled = true;
      }
    }

    async addBundleToCart() {
      if (!this.selectedSwoveralls || !this.selectedSwovie) {
        return;
      }

      const addBundleBtn = this.querySelector('#add-bundle-btn-{{ ai_gen_id }}');
      const errorMessage = this.querySelector('#error-message-{{ ai_gen_id }}');
      
      addBundleBtn.disabled = true;
      addBundleBtn.textContent = 'Adding to cart...';
      errorMessage.style.display = 'none';

      try {
        const formData = {
          items: [
            {
              id: this.selectedSwoveralls.variantId,
              quantity: 1
            },
            {
              id: this.selectedSwovie.variantId,
              quantity: 1
            }
          ]
        };

        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(formData)
        });

        if (response.ok) {
          addBundleBtn.textContent = 'Added! ✓';
          
          this.openCartDrawer();
          
          setTimeout(() => {
            addBundleBtn.textContent = 'Add Bundle to Cart';
            addBundleBtn.disabled = false;
          }, 2000);
        } else {
          throw new Error('Failed to add to cart');
        }
      } catch (error) {
        errorMessage.textContent = 'Error adding bundle to cart. Please try again.';
        errorMessage.style.display = 'block';
        addBundleBtn.disabled = false;
        addBundleBtn.textContent = 'Add Bundle to Cart';
      }
    }

    openCartDrawer() {
      const cartDrawer = document.querySelector('cart-drawer');
      const cartNotification = document.querySelector('cart-notification');
      const cartIconBubble = document.querySelector('cart-icon-bubble');
      
      if (cartDrawer && typeof cartDrawer.open === 'function') {
        cartDrawer.open();
      } else if (cartNotification && typeof cartNotification.open === 'function') {
        cartNotification.open();
      } else {
        const cartButton = document.querySelector('[data-cart-drawer-toggle], .header__icon--cart, #cart-icon-bubble');
        if (cartButton) {
          cartButton.click();
        } else {
          document.dispatchEvent(new CustomEvent('cart:refresh'));
          
          const event = new CustomEvent('cart:open');
          document.dispatchEvent(event);
        }
      }
      
      if (cartIconBubble) {
        fetch('/cart.js')
          .then(response => response.json())
          .then(cart => {
            const bubble = cartIconBubble.querySelector('.cart-count-bubble');
            if (bubble) {
              bubble.textContent = cart.item_count;
              if (cart.item_count > 0) {
                bubble.classList.remove('hidden');
              }
            }
          });
      }
    }

    formatMoney(cents) {
      const dollars = cents / 100;
      return '$' + dollars.toFixed(2);
    }
  }

  customElements.define('bundle-promo-{{ ai_gen_id }}', BundlePromo{{ ai_gen_id }});
})();
</script>

