{{ 'section-unique-selling-points.css' | asset_url | stylesheet_tag }}

{% if section.blocks.size > 1 %}
  <div class="usp__wrapper">
      {% for block in section.blocks %}
        <div class="usp">
          {%  if block.settings.usp_svg_html != blank %}
            {{ block.settings.usp_svg_html }}
          {% else %}
            <img
              class="usp__image"
              src="{{ block.settings.usp_image | image_url }}"
            />
          {% endif %}
          <h3 class="usp__title">{{ block.settings.usp_title | upcase}}</h3>
        </div>
      {% endfor %}
  </div>
{% endif %}

{% schema %}
  {
    "name": "Unique Selling Points",
    "blocks": [
      {
        "type": "unique_selling_point",
        "name": "Unique Sellling Point",
        "limit": 3,
        "settings": [
          {
          "type":"text",
          "id":"usp_title",
          "label":"Unique Selling Point Title"
          },
          {
            "type": "image_picker",
            "id": "usp_image",
            "label": "Unique Selling Point Image"
          },
          {
            "type": "html",
            "id": "usp_svg_html",
            "label": "Unique Selling Point HTML SVG",
            "info": "If present, this will take priority over the Unique Selling Point Image"
          }
        ] 
      }
    ],
    "presets": [
      {
        "name": "Unique Sellling Point"
      }
    ]
  }
{% endschema %}