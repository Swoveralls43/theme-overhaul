<script>
(function(){
  const sectionId = '{{ section.id }}';
  const carousel = document.querySelector('.carousel' + sectionId);
  const track = carousel.querySelector('.track' + sectionId);
  const navLeft = carousel.querySelector('.nav' + sectionId + '.left');
  const navRight = carousel.querySelector('.nav' + sectionId + '.right');
  const dotsContainer = carousel.querySelector('.dots' + sectionId);

  let cards = Array.from(track.children);
  let index = 0;
  let visible = 3;
  const gap = 45;

  function getVisibleCount() {
    if (window.innerWidth < 600) return 1;
    if (window.innerWidth < 900) return 2;
    return 3;
  }

  function updateCardHeights() {
    const allCards = track.querySelectorAll('.card' + sectionId);
    allCards.forEach(card => {
      const content = card.querySelector('.card-content' + sectionId);
      card.style.setProperty('--card' + sectionId + '-height', content.offsetHeight + 'px');
    });
  }

  function renderDots() {
    dotsContainer.innerHTML = '';
    cards.forEach((_, i) => {
      const dot = document.createElement('span');
      dot.className = 'dot' + sectionId + (i === index % cards.length ? ' active' : '');
      dot.addEventListener('click', () => {
        index = i + visible; // account for cloned cards
        updatePosition();
        updateActiveDot();
      });
      dotsContainer.appendChild(dot);
    });
  }

  function updateActiveDot() {
    const dots = dotsContainer.querySelectorAll('.dot' + sectionId);
    dots.forEach((dot, i) => {
      dot.classList.toggle('active', i === index % cards.length);
    });
  }

  function cloneEdges() {
    while (track.firstChild) track.removeChild(track.firstChild);
    cards.forEach(c => track.appendChild(c.cloneNode(true)));
    visible = getVisibleCount();
    const before = cards.slice(-visible).map(c => c.cloneNode(true));
    const after = cards.slice(0, visible).map(c => c.cloneNode(true));
    before.forEach(c => track.prepend(c));
    after.forEach(c => track.append(c));
    updateCardHeights();
  }

  function updatePosition(smooth = true) {
    const all = track.children;
    const cardWidth = all[0].offsetWidth + gap;
    const totalVisibleWidth = cardWidth * visible - gap;
    const center = (carousel.offsetWidth - totalVisibleWidth) / 2;
    track.style.transition = smooth ? 'transform 0.6s ease' : 'none';
    track.style.transform = `translateX(${-(index * cardWidth) + center}px)`;
  }

  function init() {
    cloneEdges();
    index = getVisibleCount();
    updatePosition(false);
    updateCardHeights();
    renderDots();
  }

  function next() {
    const all = track.children;
    index++;
    updatePosition();
    updateActiveDot();
    if (index >= all.length - visible) {
      setTimeout(() => {
        index = visible;
        updatePosition(false);
        updateActiveDot();
      }, 600);
    }
  }

  function prev() {
    const all = track.children;
    index--;
    updatePosition();
    updateActiveDot();
    if (index < visible) {
      setTimeout(() => {
        index = all.length - visible * 2;
        updatePosition(false);
        updateActiveDot();
      }, 600);
    }
  }

  navRight.addEventListener('click', next);
  navLeft.addEventListener('click', prev);
  window.addEventListener('resize', init);
  window.addEventListener('load', init);
})();
</script>

