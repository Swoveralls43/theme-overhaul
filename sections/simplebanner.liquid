<!-- sections/simplebanner -->
{{ 'section-simple_banner.css' | asset_url | stylesheet_tag }}

<div class="container_simple_banner arrow-parent page-width">
  {% if section.settings.text_heading_link != blank %}<a href="{{ section.settings.text_heading_link }}"> {% endif %}
    <div class="simple_banner__img">
      <picture>
        <source media="(min-width: 750px)" srcset="{{ section.settings.image_desktop | img_url: '1800x' }}">
        
        {% if section.settings.image_mobile %}
          <img src="{{ section.settings.image_mobile | img_url: '750x' }}" alt="{{ section.settings.image_mobile.alt }}">
        {% else %}
          <img src="{{ section.settings.image_desktop | img_url: '1500x' }}" alt="{{ section.settings.image_desktop.alt }}">
        {% endif %}
      </picture>
    </div>
    <p class="text-heading">{{ section.settings.text_heading }} <span class="arrow"></span></p>  
  </a>
</div>  

{% schema %}
{
    "presets": [
        {
            "category": "Simple banner",
            "name": "Simple banner"
        }
    ],
    "name": "Simple Banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "image_desktop",
            "label": "Desktop Image"
        },
        {
            "type": "image_picker",
            "id": "image_mobile",
            "label": "Mobile Image"
        },
        {
            "type": "text",
            "id": "text_heading",
            "label": "heading"
        }, 
        {
            "type": "url",
            "id": "text_heading_link",
            "label": "Heaging link"
        }
    ]
}
{% endschema %}