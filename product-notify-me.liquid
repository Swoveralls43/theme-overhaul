<div class="right__drawer__notify__me" data-right-drawer-type="product-notify-me">
  <div class="right__drawer__content">
    <div class="right__drawer__head">
      <div class="right__drawer__head__title">
        NOTIFY ME
      </div>
      <div class="right__drawer--close">
        <img src="{{ 'icon-close.svg' | asset_url }}" />
      </div>
    </div>

    <div class="right__drawer__subcontent__wrapper">
      <div class="right__drawer__content__subtitle-light" style="display:none;text-align:center;">
        We'll text you when this product is back in stock.
      </div>
    </div>



    <style>
      .right__drawer__form__wrapper .klaviyo-form{
          padding:0!important;
      }
      
      .right__drawer__form__wrapper .klaviyo-form div, 
      .right__drawer__form__wrapper .klaviyo-form p, 
      .right__drawer__form__wrapper .klaviyo-form a{
        font-size:12px!important;
      }
    </style>

    <div class="right__drawer__form__wrapper">

        <div class="klaviyo-form-TDVhi4"></div>
      
{% comment %}
      <form
        class="js-bis-form"
        onsubmit="event.preventDefault();"
      >
        <input
          type="email"
          class="right__drawer__form__input"
          name="email"
          required="required"
          placeholder="Your email"
        />
        <button
          type="submit"
          class="right__drawer__form__button"
        >
          NOTIFY ME
          <img class="notify__me__icon-bell" src="{{ 'icon-bell.png' | asset_url }}" />
        </button>
      </form>
{% endcomment %}
      
    </div>




    

  </div>
</div>