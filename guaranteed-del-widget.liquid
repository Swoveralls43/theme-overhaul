    font-weight: 700;
    font-size: 12px !important;
  }
  
  .gdw-info .secondary p{
    font-weight: 400;
    font-style: italic;
  }
  
  .gdw-twi-text {
    font-weight: 700 !important;
  }

  #returnslink,
  #freeshippinglink {
    text-decoration:underline !important;
  }

  .gdw-main-cont {
    padding: 2rem;
    background-color: #e4e4e4;
    border-radius: 5px;
  }

  @media screen and (max-width: 749px){
    .gdw-twi-text,
    .gdw-info p {
