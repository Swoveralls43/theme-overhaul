<script>
document.addEventListener('DOMContentLoaded', function(){
  let selectortrigger = document.querySelector('div[data-product-description-considerations]');
  let gdwcont = document.createElement("div");
  let gdwicon = document.getElementById("gdwicon").value;
  let mtext = document.getElementById("mtext").value;
  let stext = document.getElementById("stext").value;
  let stextshow = document.getElementById("stextshow").value;
  if(stextshow == "true"){
  gdwcont.innerHTML = (`
    <div class='gdw-main-cont'>
      <div class='gdw-text-with-icon'>
        <img class='gdw-twi-icon' src='`+ gdwicon +`' />
        <span class='gdw-twi-text gdw-info'>
          <div>
            <p>`+ mtext +`</p>
          </div>
          <div class='secondary desktop-only'>
            <p>`+ stext +`</p>
          </div>
        </span>
      </div>
      <span class='gdw-twi-text gdw-info mobile-only'>
        <div class='secondary'>
          <p>`+ stext +`</p>
        </div>
      </span>
    </div>
  `);
  }
  else {
  gdwcont.innerHTML = (`
    <div class='gdw-main-cont'>
      <div class='gdw-text-with-icon'>
        <img class='gdw-twi-icon' src='`+ gdwicon +`' />
        <span class='gdw-twi-text gdw-info'>
          <div>
            <p>`+ mtext +`</p>
          </div>
        </span>
      </div>
    </div>
  `);
  }
  gdwcont.classList.add('gdw-container');
  selectortrigger.parentNode.insertBefore(gdwcont, selectortrigger);
});
</script>

