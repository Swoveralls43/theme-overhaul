{% form 'customer_address', customer.new_address, aria-labelledBy: 'AddressNewHeading' %}

  {%- if form.errors -%}
    <div class="right__drawer__form__errors">
      {{- form.errors.messages['form'] -}}
    </div>
  {%- endif -%}

  <input type="text" class="right__drawer__form__input" id="AddressFirstNameNew" name="address[first_name]" value="{{ form.first_name }}" required="required" placeholder="Address Name e.g. Home, Office..."/>

  <input type="text" class="right__drawer__form__input" id="AddressLastNameNew" name="address[last_name]" value="{{ form.last_name }}" required="required" placeholder="Full Name"/>

  <input type="text" class="right__drawer__form__input" id="AddressCompanyNew" name="address[company]" value="{{ form.company }}" placeholder="Company"/>

  <input type="text" class="right__drawer__form__input" id="AddressAddress1New" value="{{ form.address1 }}" required="required" placeholder="Address 1"/>

  <input type="text" class="right__drawer__form__input" id="AddressAddress2New" name="address[address2]" value="{{ form.address2 }}" placeholder="Address 2"/>

  <input type="text" class="right__drawer__form__input" id="AddressCityNew" name="address[city]" value="{{ form.city }}" required="required" placeholder="City"/>

  <div class="right__drawer__form__input right__drawer__form__input-select">
    <div class="drawer__form__input__select-wrapper drawer__form__input__select-large">
      <select class="drawer__form__input__select" id="AddressCountryNew" name="address[country]">
        {{ all_country_option_tags }}
      </select>
      <img class="chevron__icon--down" src="{{ 'icon-chevron.svg' | asset_url }}"/>
    </div>
  </div>

  <div class="right__drawer__form__input right__drawer__form__input-select">
    <div class="drawer__form__input__select-wrapper drawer__form__input__select-large">
      <select class="drawer__form__input__select" id="AddressProvinceNew" name="address[province]">
        {% render 'states-options' %}
      </select>
      <img class="chevron__icon--down" src="{{ 'icon-chevron.svg' | asset_url }}"/>
    </div>
  </div>

  <input type="text" class="right__drawer__form__input" id="AddressZipNew" name="address[zip]" value="{{ form.zip }}" required="required" placeholder="Postal/ZIP Code"/>

  <input type="tel" class="right__drawer__form__input" id="AddressPhoneNew" name="address[phone]" value="{{ form.phone }}" required="required" placeholder="Phone Number" value="{{ address.phone }}"/>

  <div class="right__drawer__checkbox">
    <input id="set__as__default__address" type="checkbox" value=""/>
    <label for="set__as__default__address">
      Set as default address
    </label>
  </div>

  <button class="right__drawer__form__button" type="submit">
    SAVE ADDRESS
  </button>
{% endform %}